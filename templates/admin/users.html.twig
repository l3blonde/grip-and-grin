{% extends "base.html.twig" %}

{% block title %}Manage Users | Admin | {{ parent() }}{% endblock %}

{% block content %}
    <div class="admin-users">
        <div class="admin-header">
            <h1>Manage Users</h1>
            <p>View and manage all user accounts</p>
        </div>

        <div class="users-table">
            <table>
                <thead>
                <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Joined</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <div class="user-info">
                                <strong>{{ user.fullName }}</strong>
                                <small>@{{ user.username }}</small>
                            </div>
                        </td>
                        <td>
                            {{ user.email }}
                            {% if user.isEmailVerified %}
                                <span class="verified-badge">âœ“</span>
                            {% endif %}
                        </td>
                        <td>
                                <span class="role-badge role-{{ user.role.value }}">
                                    {{ user.role.value|title }}
                                </span>
                        </td>
                        <td>
                                <span class="status-badge status-{{ user.isActive ? 'active' : 'inactive' }}">
                                    {{ user.isActive ? 'Active' : 'Inactive' }}
                                </span>
                        </td>
                        <td>{{ user.createdAt|date("M j, Y") }}</td>
                        <td class="actions">
                            <a href="/profile/{{ user.id }}" class="action-link view">View Profile</a>
                            {% if user.id != session.currentUserId %}
                                <a href="/admin/users/{{ user.id }}/edit" class="action-link edit">Edit</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="no-users">No users found.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
