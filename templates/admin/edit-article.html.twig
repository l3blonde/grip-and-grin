{% extends "base.html.twig" %}

{% block title %}Edit Article | Admin | {{ parent() }}{% endblock %}

{% block content %}
    <div class="admin-form">
        <div class="admin-header">
            <h1>Edit Article</h1>
            <div class="header-actions">
                {% if article.isPublished %}
                    <a href="/article/{{ article.slug }}" class="button secondary" target="_blank">View Article</a>
                {% endif %}
                <a href="/admin/articles" class="button secondary">‚Üê Back to Articles</a>
            </div>
        </div>

        {% if error %}
            <div class="error-message">{{ error }}</div>
        {% endif %}

        <form method="POST" action="/admin/articles/{{ article.id }}/update" enctype="multipart/form-data" class="article-form">
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

            <div class="form-row">
                <div class="form-group">
                    <label for="title">Title *</label>
                    <input type="text" id="title" name="title" value="{{ article.title }}" required maxlength="255">
                </div>

                <div class="form-group">
                    <label for="category_id">Category *</label>
                    <select id="category_id" name="category_id" required>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {{ article.categoryId == category.id ? 'selected' : '' }}>
                                {{ category.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="excerpt">Excerpt</label>
                <textarea id="excerpt" name="excerpt" rows="3" maxlength="500" placeholder="Brief description of the article (max 500 characters)">{{ article.excerpt }}</textarea>
                <small>Characters remaining: <span id="excerpt-count">500</span></small>
            </div>

            <div class="form-group">
                <label for="content">Content *</label>
                <textarea id="content" name="content" rows="15" required>{{ article.content }}</textarea>
            </div>

            <div class="image-section">
                {% if article.hasFeaturedImage %}
                    <div class="current-image">
                        <h3>Current Featured Image</h3>
                        <img src="{{ article.featuredImage.thumbnailPath }}" alt="{{ article.featuredImage.altText }}" class="current-image-preview">
                        <div class="image-actions">
                            <label>
                                <input type="checkbox" name="remove_image" value="1"> Remove current image
                            </label>
                        </div>
                    </div>
                {% endif %}

                <div class="form-row">
                    <div class="form-group">
                        <label for="featured_image">{% if article.hasFeaturedImage %}Replace{% else %}Add{% endif %} Featured Image</label>
                        <input type="file" id="featured_image" name="featured_image" accept="image/*">
                        <small>Supported formats: JPEG, PNG, GIF, WebP (max 10MB)</small>
                    </div>

                    <div class="form-group">
                        <label for="image_alt_text">Image Alt Text</label>
                        <input type="text" id="image_alt_text" name="image_alt_text"
                               value="{{ article.featuredImage.altText ?? '' }}"
                               placeholder="Describe the image for accessibility">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="status">Status</label>
                <select id="status" name="status">
                    <option value="draft" {{ article.status.value == 'draft' ? 'selected' : '' }}>Draft</option>
                    <option value="published" {{ article.status.value == 'published' ? 'selected' : '' }}>Published</option>
                    <option value="archived" {{ article.status.value == 'archived' ? 'selected' : '' }}>Archived</option>
                </select>
                <small>
                    {% if article.publishedAt %}
                        Originally published: {{ article.publishedAt|date("F j, Y g:i A") }}
                    {% else %}
                        Not yet published
                    {% endif %}
                </small>
            </div>

            <div class="form-actions">
                <button type="submit" class="button primary">Update Article</button>
                <a href="/admin/articles" class="button secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script>
        // Character counter for excerpt
        const excerptTextarea = document.getElementById('excerpt');
        const excerptCount = document.getElementById('excerpt-count');

        excerptTextarea.addEventListener('input', function() {
            const remaining = 500 - this.value.length;
            excerptCount.textContent = remaining;
            excerptCount.style.color = remaining < 50 ? '#dc3545' : '#666';
        });

        // Trigger initial count
        excerptTextarea.dispatchEvent(new Event('input'));
    </script>
{% endblock %}
