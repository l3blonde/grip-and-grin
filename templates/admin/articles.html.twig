{% extends "base.html.twig" %}

{% block title %}Manage Articles | Admin | {{ parent() }}{% endblock %}

{% block content %}
    <div class="admin-articles">
        <div class="admin-header">
            <h1>Manage Articles</h1>
            <a href="/admin/articles/create" class="button primary">Create New Article</a>
        </div>

        {% if app.request.query.get('created') %}
            <div class="success-message">Article created successfully!</div>
        {% endif %}

        {% if app.request.query.get('updated') %}
            <div class="success-message">Article updated successfully!</div>
        {% endif %}

        {% if app.request.query.get('deleted') %}
            <div class="success-message">Article deleted successfully!</div>
        {% endif %}

        {% if app.request.query.get('error') %}
            <div class="error-message">{{ app.request.query.get('error') }}</div>
        {% endif %}

        <div class="articles-table">
            <table>
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td>
                            <div class="article-title">
                                {{ article.title }}
                                {% if article.hasFeaturedImage %}
                                    <span class="has-image">üì∑</span>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                                <span class="status-badge status-{{ article.status.value }}">
                                    {{ article.status.value|title }}
                                </span>
                        </td>
                        <td>Category {{ article.categoryId }}</td>
                        <td>Author {{ article.authorId }}</td>
                        <td>{{ article.createdAt|date("M j, Y") }}</td>
                        <td class="actions">
                            {% if article.isPublished %}
                                <a href="/article/{{ article.slug }}" class="action-link view" target="_blank">View</a>
                            {% endif %}
                            <a href="/admin/articles/{{ article.id }}/edit" class="action-link edit">Edit</a>
                            <form method="POST" action="/admin/articles/{{ article.id }}/delete" class="delete-form" style="display: inline;">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <button type="submit" class="action-link delete" onclick="return confirm('Are you sure you want to delete this article?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="no-articles">No articles found. <a href="/admin/articles/create">Create your first article</a>.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
            <nav class="pagination">
                {% if hasPreviousPage %}
                    <a href="/admin/articles?page={{ previousPage }}" class="pagination-link pagination-prev">‚Üê Previous</a>
                {% endif %}

                <span class="pagination-info">Page {{ currentPage }} of {{ totalPages }}</span>

                {% if hasNextPage %}
                    <a href="/admin/articles?page={{ nextPage }}" class="pagination-link pagination-next">Next ‚Üí</a>
                {% endif %}
            </nav>
        {% endif %}
    </div>
{% endblock %}
