{% extends "base.html.twig" %}

{% block title %}{{ article.title }} | {{ parent() }}{% endblock %}

{% block content %}
    <article class="article-full">
        <header class="article-header">
            <h1 class="article-title-full">{{ article.title }}</h1>
            <p class="article-meta-full">Published on {{ article.publishedAt|date("F j, Y") }}</p>
        </header>

        {% if article.hasFeaturedImage %}
            <div class="article-featured-image">
                <picture>
                    <source srcset="{{ article.featuredImage.fullPath }}" type="image/webp">
                    <img src="{{ article.featuredImage.fullPath|replace({'.webp': '.jpg'}) }}"
                         alt="{{ article.featuredImage.altText }}"
                         class="featured-image"
                         loading="lazy">
                </picture>
            </div>
        {% endif %}

        <div class="article-content">
            {{ article.content|nl2br }}
        </div>
    </article>

    <!-- Article Navigation -->
    {% if previousArticle or nextArticle %}
        <nav class="article-navigation" role="navigation" aria-label="Article navigation">
            {% if previousArticle %}
                <a href="/article/{{ previousArticle.slug }}" class="nav-button nav-button-prev">
                    ← Previous
                </a>
            {% endif %}

            {% if nextArticle %}
                <a href="/article/{{ nextArticle.slug }}" class="nav-button nav-button-next">
                    Next →
                </a>
            {% endif %}
        </nav>
    {% endif %}
{% endblock %}
