<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Grip & Grin{% endblock %}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/logo.svg" type="image/svg+xml">
</head>
<body>
<div class="container">
    <header class="site-header">
        <div class="header-content">
            <a href="/" class="logo">
                <img src="/logo.svg" alt="Grip & Grin Logo" class="logo-svg">
                <span class="logo-text">Grip &amp; Grin</span>
            </a>

            <nav class="main-nav">
                <a href="/" class="nav-link">News</a>
                {% if session.isLoggedIn %}
                    <div class="user-nav">
                        <div class="user-dropdown">
                            <button class="user-dropdown-toggle">
                                <span class="user-welcome">{{ session.currentUsername }}</span>
                                <span class="dropdown-arrow">‚ñº</span>
                            </button>
                            <div class="user-dropdown-menu">
                                <a href="/profile" class="dropdown-item">üë§ Profile</a>
                                {% set currentUser = session.currentUserId ? app.user : null %}
                                {% if currentUser and currentUser.canManageArticles %}
                                    <a href="/admin/dashboard" class="dropdown-item">‚öôÔ∏è Admin Dashboard</a>
                                {% endif %}
                                <div class="dropdown-divider"></div>
                                <a href="/logout" class="dropdown-item logout">üö™ Logout</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <a href="/login" class="nav-link">Login</a>
                    <a href="/register" class="nav-link">Register</a>
                {% endif %}
            </nav>

            <form class="search-form" action="/search" method="GET">
                <input type="text" name="q" placeholder="Search articles..." class="search-input" value="{{ app.request.query.get('q') }}">
                <button type="submit" class="search-button">Search</button>
            </form>
        </div>

        <!-- Category Navigation -->
        <nav class="category-nav">
            <a href="/" class="category-link">All</a>
            <a href="/category/classics" class="category-link">Classics</a>
            <a href="/category/collector" class="category-link">Collector</a>
            <a href="/category/reviews" class="category-link">Reviews</a>
            <a href="/category/trends" class="category-link">Trends</a>
        </nav>
    </header>

    <main>
        {% block content %}{% endblock %}
    </main>

    <footer class="site-footer">
        <p>&copy; {{ "now"|date("Y") }} Grip & Grin. All rights reserved.</p>
    </footer>
</div>

<script>
    // User dropdown functionality
    document.addEventListener('DOMContentLoaded', function() {
        const dropdown = document.querySelector('.user-dropdown');
        if (dropdown) {
            const toggle = dropdown.querySelector('.user-dropdown-toggle');
            const menu = dropdown.querySelector('.user-dropdown-menu');

            toggle.addEventListener('click', function(e) {
                e.preventDefault();
                dropdown.classList.toggle('active');
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (!dropdown.contains(e.target)) {
                    dropdown.classList.remove('active');
                }
            });
        }
    });
</script>
</body>
</html>
