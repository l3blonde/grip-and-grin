{% extends "base.html.twig" %}

{% block title %}Home | {{ parent() }}{% endblock %}

{% block content %}
    <section class="article-list">
        {% for article in articles %}
            <article class="article-summary observe-lazy">
                {% if article.hasFeaturedImage %}
                    <div class="article-image">
                        <a href="/article/{{ article.slug }}">
                            <div class="image-container">
                                <picture>
                                    <source media="(max-width: 480px)"
                                            srcset="{{ article.featuredImage.thumbnailPath|replace({'.webp': '-mobile.webp'}) }}"
                                            type="image/webp">
                                    <source media="(max-width: 480px)"
                                            srcset="{{ article.featuredImage.thumbnailPath|replace({'.webp': '-mobile.jpg'}) }}"
                                            type="image/jpeg">
                                    <source srcset="{{ article.featuredImage.thumbnailPath }}" type="image/webp">
                                    <img data-src="{{ article.featuredImage.thumbnailPath|replace({'.webp': '.jpg'}) }}"
                                         alt="{{ article.featuredImage.altText }}"
                                         class="article-thumbnail lazy-image"
                                         loading="lazy"
                                         width="300"
                                         height="200">
                                </picture>
                            </div>
                        </a>
                    </div>
                {% endif %}

                <div class="article-content">
                    <h2 class="article-title">
                        <a href="/article/{{ article.slug }}">{{ article.title }}</a>
                    </h2>
                    <p class="article-excerpt">{{ article.content|striptags|slice(0, 150) }}...</p>
                    <div class="article-meta">
                        <span>
                            {{ icon('calendar', 'icon small') }}
                            <time datetime="{{ article.publishedAt|date('Y-m-d') }}">
                                {{ article.publishedAt|date("F j, Y") }}
                            </time>
                        </span>
                        <a href="/article/{{ article.slug }}" class="read-more">
                            Read More
                            {{ icon('arrow-right', 'icon small') }}
                        </a>
                    </div>
                </div>
            </article>
        {% else %}
            <div class="no-articles">
                <p>No articles found.</p>
            </div>
        {% endfor %}
    </section>

    {% if totalPages > 1 %}
        <nav class="pagination" role="navigation" aria-label="Pagination">
            {% if hasPreviousPage %}
                <a href="/?page={{ previousPage }}" class="pagination-link pagination-prev" rel="prev">
                    {{ icon('arrow-left', 'icon small') }}
                    <span class="hidden-mobile">Previous</span>
                </a>
            {% endif %}

            <span class="pagination-info" aria-current="page">
                Page {{ currentPage }} of {{ totalPages }}
            </span>

            {% if hasNextPage %}
                <a href="/?page={{ nextPage }}" class="pagination-link pagination-next" rel="next">
                    <span class="hidden-mobile">Next</span>
                    {{ icon('arrow-right', 'icon small') }}
                </a>
            {% endif %}
        </nav>
    {% endif %}
{% endblock %}
